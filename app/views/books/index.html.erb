<header>
<h1>Books</h1>
</header>


<table>
<tr>
<th>Title</th>
<th>Body</th>
<th><td>&nbsp;</td></th>
<th><td>&nbsp;</td></th>
</tr>
<% @books.each do |book| %>
<tr>
<td><%= book.title %></td>
<td><%= book.body %></td>
<td><%= link_to"Show",book_path(book.id) %></td>
<td><%= link_to"Edit",edit_book_path(book.id) %></td>
<td><%= link_to"Destroy",book_path(book.id), method: :delete %></td>
</tr>
<br>
</table>
<% end %>

<h1>New Book</h1>
<%= form_for(@book, url: books_path) do |f| %>
	<p>Title</p>
	<%=f.text_field :title %>
	<p>Body</p>
	<%=f.text_area :body %>

	<%= f.submit "Create Book" %>
<% end %>